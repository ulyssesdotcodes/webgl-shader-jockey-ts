{
    "Compile": {
        "Extensions": [ ".ts" ],
        "ExtensionsWithNoOutput": [ ".d.ts" ],
        "OutDirectory": "out",
        "Executable": "%powershellexe%",
        "Arguments": "-NoProfile %chutzpahsettingsdir%\\compile.ps1 -ExecutionPolicy ByPass"
    },
    "References": [
        { "Path": "lib", "Include": "*.js", "Exclude": "*.min.js"}
    ],
    "Tests": [
        { "Include": "*/*.tests.ts" }
    ]
}